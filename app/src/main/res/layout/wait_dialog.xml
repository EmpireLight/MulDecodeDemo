<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20.0dip">

    <com.jieshao.widget.RoundProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android_custom:roundColor="@android:color/white"
        android_custom:roundProgressColor="@color/top_bottom"
        android_custom:roundWidth="4dip"
        android_custom:textColor="@android:color/white"
        android_custom:textSize="18dp" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="26dp"
        android:maxEms="13"
        android:textColor="@android:color/white"
        android:text="@string/wait_hint"/>

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginTop="26dp"
        android:src="@drawable/sel_wait_cancel"/>


</LinearLayout>